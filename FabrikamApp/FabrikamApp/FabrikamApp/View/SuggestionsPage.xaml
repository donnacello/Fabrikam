<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FabrikamApp"
             x:Class="FabrikamApp.View.SuggestionsPage">
  <ContentPage.Content>
    <StackLayout BackgroundColor="White">
      <Image Source="fabrikam_logo.png"/>
      <Button Text="Recommendation based on your Smile" TextColor="White" BackgroundColor="Green" Clicked="TakePicture_Clicked"  x:Name="smileSuggest"/>
      <ActivityIndicator x:Name ="SPcircle" IsRunning="False" Color="Teal"/>
      
      <Label Text="" x:Name="rexName" FontSize="26"/>
      <Image x:Name="rexPhoto" VerticalOptions="Center" HeightRequest="200" />
      <Label Text="" x:Name="rexDesc" />
      <Image x:Name="image" VerticalOptions="Center" HeightRequest="200" />
    
    </StackLayout>
  </ContentPage.Content>
</ContentPage>